<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<table>
  <thead>
    <tr>
      <th>Issue key</th>
      <th>Title</th>
      <th>State</th>
      <th>Blocker</th>
      <th>Last updated at</th>
      <th>Last reply at</th>
      <th>Assignee</th>
      <th>Issue category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.issue_key %></td>
        <td><%= issue.title %></td>
        <td><%= issue.state %></td>
        <td><%= issue.blocker %></td>
        <td><%= issue.last_updated_at %></td>
        <td><%= issue.last_reply_at %></td>
        <td><%= issue.assignee_id %></td>
        <td><%= issue.issue_category %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
